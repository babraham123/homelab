# /etc/containers/systemd/openwakeword.container
# Ref: https://docs.podman.io/en/latest/markdown/podman-systemd.unit.5.html

[Unit]
Description="Homelab: wake word detection"
StartLimitIntervalSec=30
StartLimitBurst=10
Wants=network.target
After=network-online.target

[Container]
Image=localhost/openwakeword:latest
ContainerName=openwakeword
AutoUpdate=registry
NoNewPrivileges=true

Network=net.network
HostName=wake.{{ site.url }}
IP={{ websvcs.container_subnet }}.14
# port 10400: Wyoming protocol for wake word

Exec="--preload-model={{ model.wake }} --noise_suppression"

Environment=TZ={{ personal.timezone }}
Volume=/var/opt/openwakeword:/data

[Service]
Restart=on-failure
TimeoutStartSec=300

[Install]
WantedBy=multi-user.target
